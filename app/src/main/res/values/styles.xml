<resources>

    <style name="wrap_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/darker_blue</item>
        <item name="actionBarSize">50dp</item>
        <item name="colorAccent">@color/lightblue</item>
    </style>

    <style name="myTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@color/darkblue</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>
    <style name="fullline_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_text_title" parent="@style/wrap_wrap">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="list_text_info" parent="@style/wrap_wrap">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
