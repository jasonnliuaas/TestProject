<resources>

    <style name="wrap_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/darker_blue</item>
        <item name="actionBarSize">50dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/lightblue</item>
    </style>
    <style name="StyledIndicators" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="CustomCirclePageIndicator">
        <item name="centered">true</item>
        <item name="strokeWidth">2.0dip</item>
        <item name="fillColor">#ff888888</item>
        <item name="radius">10.0dip</item>
        <item name="strokeColor">#ff000000</item>
    </style>
    <style name="CustomTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8.0dip</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CustomTitlePageIndicator">
        <item name="android:textColor">#aa000000</item>
        <item name="android:background">#18ff0000</item>
        <item name="selectedColor">#ff000000</item>
        <item name="footerColor">#ffaa2222</item>
        <item name="footerLineHeight">1.0dip</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerIndicatorHeight">3.0dip</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="NewsFlag">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="myTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@color/main_green</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="fullline_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NewsItemTitleText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/news_list_item_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="base_list_desc_style">
        <item name="android:textSize">13.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff808080</item>
    </style>

    <style name="NewsSummaryItemTime">
        <item name="android:textSize">11.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/news_time_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_text_title" parent="@style/wrap_wrap">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="list_text_info" parent="@style/wrap_wrap">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
